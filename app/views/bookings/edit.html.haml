#header
  %h1
    Edit Guest

#data
  = simple_form_for [current_hotel, booking] do |f|

    #summary
      Make suer you check for 
      = link_to "availablitly", month_hotel_inventories_path(current_hotel, Date.current.year, Date.current.month)
      before changing thte room type or date.
    #room_info
      = f.input :arrive, as: "string"
      = f.input :depart, as: "string"
      = f.input :bookable, collection: bookables.map{|b| [b.name, "#{b.class.to_s[0]}#{b.id}"]},label: "Room", selected: "#{booking.bookable.class.to_s[0]}#{booking.bookable.id}"
    #registration_info
      = f.input :first_name
      = f.input :last_name
      = f.input :email
      = f.input :made_by_first_name, label: "Your First name"
      = f.input :made_by_last_name, label: "Your Last name"
    #credit_card_form
      = f.input :cc_number, label: "Credit Card number"
      = f.input :cc_month, collection: 1..12, label: "Month"
      = f.input :cc_year, collection: Date.current.year..(Date.current + 10.years).year, label: "Year"
      = f.input :cc_zipcode, label: "Zip code"
      = f.input :cc_cvv
    #confirmation_info
      = f.input :email_confirmation
      = f.input :sms_confirmation
    .form-actions  
      = f.submit "Save Changes"
      
      
      