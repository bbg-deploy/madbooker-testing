



#next_guests
  %table.standard
    %thead
      %tr
        %th Customer
        %th Status
        %th Room Type
        %th Arrival 
        %th Departure
        %th Rate
        %th 
    %tbody
      - @bookings.each do |booking|
        %tr
          %td= booking.name
          %td= booking.state.titleize
          %td= booking.room_name
          %td= format booking.arrive
          %td= format booking.depart
          %td= format booking.lowest_rate
          %td= link_to "Details", [current_hotel, booking]