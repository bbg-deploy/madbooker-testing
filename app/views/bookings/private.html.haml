
#header
  %h1
    Booking Details for
    %span.name
      = @booking.first_name
      = @booking.last_name


#data
  #status
    Current State is #{@booking.state.titleize}

  #guest
    %span.name
      = @booking.first_name
      = @booking.last_name
  %div= @booking.email
    
  #room
    %div= @booking.room_name
    
    %div= @booking.rate
    %div= @booking.discounted_rate
    
    %div= @booking.arrive
    %div= @booking.depart
    
  #reservation
    %div
      Made on:
      = @booking.created_at
    %div
      Made by:
      = @booking.made_by
    
    
  #filters
    - if @booking.paid
      = link_to pay_hotel_booking_path(current_hotel, @booking), method: :put do
        %i.icon-money
        Unpay
    - else
      = link_to pay_hotel_booking_path(current_hotel, @booking), method: :put do
        %i.icon-money
        Pay

    = link_to [:edit, current_hotel, @booking] do
      %i.icon-edit-sign
      Edit
    - unless @booking.checked_in?
      = link_to check_in_hotel_booking_path(current_hotel, @booking), method: :put do
        %i.icon-signin
        Check In
    - unless @booking.checked_out?
      = link_to check_out_hotel_booking_path(current_hotel, @booking), method: :put do
        %i.icon-signout
        Check Out
    - unless @booking.canceled?
      = link_to cancel_hotel_booking_path(current_hotel, @booking), method: :put do
        %i.icon-remove
        Cancel Reservation
    - unless @booking.no_show?
      = link_to no_show_hotel_booking_path(current_hotel, @booking), method: :put do
        %i.icon-remove
        No Show

    - unless @booking.open?
      = link_to open_hotel_booking_path(current_hotel, @booking), method: :put do
        %i.icon-plus
        Open


