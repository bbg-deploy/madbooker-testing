
#header
  %h1 
    Existing Packages
  = link_to [:new, current_hotel, :package], :class=>'create' do
    %i.icon-plus
    Create a Package

#data
  %table.standard
    %thead
      %tr
        %th Room
        %th Description
        %th Price
        %th
    %tbody
      - @packages.each do |package|
        = render "/packages/index/row", package: package
        
    - if @packages.total_pages > 1
      %tfoot
        %tr
          %td{colspan: 4}
            = will_paginate @packages
        


