
#header
  %h1 
    Existing Packages
    = link_to "Create a Package", [:new, current_hotel, :package]

#data
  %table.standard
    %thead
      %tr
        %th Room
        %th Description
        %th Price
        %th
    %tbody
      - @packages.each do |package|
        = render "/packages/index/row", package: package
    %tfoot
      %tr
        %td{colspan: 4}
          = will_paginate @packages
        


