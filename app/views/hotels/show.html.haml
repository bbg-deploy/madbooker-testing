



#header
  %h1
    = @hotel.name
    Dashboard

#data

  .total_revenue  
    .header
      = link_to "Revenue Stats", hotel_reports_path(current_hotel)
    .week
      //.label
      //  Revenue This Week
      .data
        .add +
        .what
          This Month
        .number
          %span $
          = @hotel.mobile_revenue_this_month
        .where
          %i.icon-mobile-phone
          Mobile
      .data
        .add +
        .what
          This Month
        .number
          %span $
          = @hotel.tablet_revenue_this_month
        .where
          %i.icon-tablet
          Tablet
      .data
        .equal =
        .what
          This Month
        .number
          %span $
          = @hotel.other_revenue_this_month
        .where
          %i.icon-laptop
          Other
      .data
        .what
          This Month
        .number
          %span $
          = @hotel.total_revenue_this_month
        .where
          Total
    .month
      //.label
      //  Revenue This Month
      .data
        .add +
        .what
          Last Month
        .number
          %span $
          = @hotel.mobile_revenue_last_month
        .where
          %i.icon-mobile-phone
          Mobile
      .data
        .add +
        .what
          Last Month
        .number
          %span $
          = @hotel.tablet_revenue_last_month
        .where
          %i.icon-tablet
          Tablet
      .data
        .equal =
        .what
          Last Month
        .number
          %span $
          = @hotel.other_revenue_last_month
        .where
          %i.icon-laptop
          Other
      .data
        .what
          Last Month
        .number
          %span $
          = @hotel.total_revenue_last_month
        .where
          Total

  .number_of_searches
    .header
      Search Activity
    .week
      //.label
      //  Searches Activity
      .data
        .add +
        .what
          This Week
        .number
          = @hotel.mobile_search_this_week
        .where
          %i.icon-mobile-phone
          Mobile
      .data
        .add +
        .what
          This Week
        .number
          = @hotel.tablet_search_this_week
        .where
          %i.icon-tablet
          Tablet
      .data
        .equal =
        .what
          This Week
        .number
          = @hotel.other_search_this_week
        .where
          %i.icon-laptop
          Other
      .data
        .what
          This Week
        .number
          = @hotel.total_search_this_week
        .where
          //%i.icon-mobile-phone
          //  +
          //%i.icon-laptop
          All Devices
    .month
      //.label
      //  Searches This Month
      .data
        .add +
        .what
          This Month
        .number
          = @hotel.mobile_search_this_month
        .where
          %i.icon-mobile-phone
          Mobile
      .data
        .add +
        .what
          This Month
        .number
          = @hotel.tablet_search_this_month
        .where
          %i.icon-tablet
          Tablet
      .data
        .equal =
        .what
          This Month
        .number
          = @hotel.other_search_this_month
        .where
          %i.icon-laptop
          Other
      .data
        .what
          This Month
        .number
          = @hotel.total_search_this_month
        .where
          //%i.icon-mobile-phone
          //  +
          //%i.icon-laptop
          All Devices

    .daily_average
      //.label
      //  Searching Daily Average
      .data
        .add +
        .what
          Daily Average
        .number
          = @hotel.mobile_search_daily_average
        .where
          %i.icon-mobile-phone
          Mobile
      .data
        .add +
        .what
          Daily Average
        .number
          = @hotel.tablet_search_daily_average
        .where
          %i.icon-tablet
          Tablet
      .data
        .equal =
        .what
          Daily Average
        .number
          = @hotel.other_search_daily_average
        .where
          %i.icon-laptop
          Other
      .data
        .what
          Daily Average
        .number
          = @hotel.total_search_daily_average
        .where
          //%i.icon-mobile-phone
          //  +
          //%i.icon-laptop
          All Devices



  .revenue_by_room_type
    .header
      = link_to "Revenue by Room Type", revenue_by_room_type_hotel_reports_path(current_hotel)
    - @hotel.revenue_by_room_type.each do |room_type|
      .room_type
        .name
          = room_type.name
        .week
          %span Week:
          %span= room_type.week
        .month
          %span Month:
          %span= room_type.month
        .daily_average
          %span Daily Average:
          %span= room_type.average



  .revenue_by_room_type
    .header
      Look to book
    - @hotel.look_to_book.each do |device|
      .room_type
        .name
          = device.name
        .week
          %span Week:
          %span= device.week
        .month
          %span Month:
          %span= device.month
        .daily_average
          %span Daily Average:
          %span= device.average

      



