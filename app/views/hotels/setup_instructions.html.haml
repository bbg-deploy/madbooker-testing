      //:plain
      //_gaq.push(['_link', "#{current_hotel.host}"])
      %textarea#example_text2
        :escaped
          <a href="#{current_hotel.booking_url}" onclick="_gaq.push(['_link', "#{current_hotel.host}"])" target="_blank">Book Your Room</a>
