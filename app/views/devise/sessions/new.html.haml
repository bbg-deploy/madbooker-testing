#form_simple_header
  %h2 Log Back In
  %h3 You're back, so cool!
#form_simple
  = simple_form_for(resource, :as => resource_name, :url => user_session_path) do |f|
    .form-inputs
      = f.input :email, :required => false, :autofocus => true, :wrapper_class => 'email_login'
      = f.input :password, :required => false, :wrapper_class => 'password_login'
    .form-actions
      = f.button :submit, "Sign in"
      = f.input :remember_me, :wrapper_class => 'remember_login', :as => :boolean if devise_mapping.rememberable?

  = render "devise/shared/links"
