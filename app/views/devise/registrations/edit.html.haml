#header
  %h1
    Edit #{resource_name.to_s.humanize}
  = render "/hotels/form/nav", on: :user


#data
  #form_column
    %h2
      Your User Information
    = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
      = f.error_notification
      .form-inputs
        = f.input :email, :required => true, :autofocus => true
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %p
            Currently waiting confirmation for: #{resource.unconfirmed_email}
        = f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false
        = f.input :password_confirmation, :required => false
        = f.input :time_zone
        = f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true
      .form-actions
        = f.button :submit, "Update"



  #right_column
    %h3 Cancel my account
    %p
      Unhappy? #{link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?\nThis can not be undone." }, :method => :delete}
      This action can not be undone. Your account and all data will be deleted and removed from our system. Your credit card will no longer be charged.
    
