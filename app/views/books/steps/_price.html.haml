
.pricing_holder
  - if room.discounted_rate.nil?
    .row
      .label
        Room Rate:
      .price= format room.rate
      - if @booking.nights > 1
        .price= format room.rate * @booking.nights
  - else
    .row
      .label
        Original Room Rate:
      .old_price
        %strike= format room.rate
      - if @booking.nights > 1
        %strike= format room.rate * @booking.nights
    .row
      .label
        Discounted Room Rate:
      .price= format room.discounted_rate
      - if @booking.nights > 1
        .price= format room.discounted_rate * @booking.nights
