- title 'Sign up'

= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = f.input :email
  - if @user.password_required?
    = f.input :password
    = f.input :password_confirmation, :label => 'Confirmation', :hint => 'Type your password again', :required => true
  = f.button :submit, 'Submit'

%div
  Or sign up with:
  %p
    = link_to image_tag('facebook_32.png'), user_omniauth_authorize_path(:facebook), :alt => "Facebook"
    = link_to image_tag('openid_32.png'), user_omniauth_authorize_path(:open_id), :alt => "Open ID"
    = link_to image_tag('twitter_32.png'), user_omniauth_authorize_path(:twitter), :alt => "Twitter"
    = link_to image_tag('google_32.png'), user_omniauth_authorize_path(:google_apps), :alt => "Google"
  